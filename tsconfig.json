{
  "compilerOptions": {
    "target": "ES2017",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "plugins": [
      {
        "name": "next"
      }
    ],
    "baseUrl": ".",
   "paths": {
			"@panda-ds-ui/*": ["./src/panda-ds-ui/*"],
			"@panda-ds-constants/*": ["./src/panda-ds-constants/*"],
			"@panda-ds-lib/*": ["./src/panda-ds-lib/*"],
			"@panda-ds-modules/*": ["./src/panda-ds-modules/*"],
			"@panda-ds-types/*": ["./src/panda-ds-types/*"],
			"@panda-ds-utils/*": ["./src/panda-ds-utils/*"],
			"@mocks/*": ["./__mocks__/*"],
			"@tests/*": ["./tests/*"]
		}
  },
  "include": ["next-env.d.ts", "**/*.ts", "**/*.tsx", ".next/types/**/*.ts", "src/panda-ds-ui/styled-system/"],
  "exclude": ["node_modules"]
}
